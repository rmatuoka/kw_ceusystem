<%content_for :title do%>
	- Entre em contato!
<%end%>

<%content_for :head do%>
	<%= stylesheet_link_tag "contato" %>
	
	<script type="text/javascript"> 
		$(document).ready(function() {
			$('.menu-oque').mouseenter(function() {
				$('#menu-oque-over').fadeToggle("fast", "linear").removeClass("hide");})
				$('#menu-oque-over').mouseleave(function(){
				$('#menu-oque-over').fadeToggle("fast", "linear").addClass("hide");
			})

			$('.menu-empresa').mouseenter(function() {
				$('#menu-empresa-over').fadeToggle("fast", "linear").removeClass("hide");})
				$('#menu-empresa-over').mouseleave(function(){
				$('#menu-empresa-over').fadeToggle("fast", "linear").addClass("hide");
			})

			$('.menu-servicos').mouseenter(function() {
				$('#menu-servicos-over').fadeToggle("fast", "linear").removeClass("hide");})
				$('#menu-servicos-over').mouseleave(function(){
				$('#menu-servicos-over').fadeToggle("fast", "linear").addClass("hide");
			})

			$('#menu-contato-over').removeClass("hide");

		})
	</script>
<%end%>

<article>
	<div id='tit-contato'>
    	<img src="images/tit-contato.png" border="0">
    </div>
    <form>
    	<label>Nome</label>
        <input name="nome" type="text" id='nome'><br>
        <label>E-mail</label>
        <input name="email" type="text" id='email'><br>
        <label>Telefone</label>
        <input name="telefone" type="text" id='telefone'><br>
        <label>Empresa</label>
        <input name="empresa" type="text" id='empresa'><br>
        <label>Mensagem</label>
        <textarea name="mensagem" id='mensagem' cols="" rows=""></textarea><br>
        <img src="images/bt-enviar.png" border="0">
    </form>
</article>
<aside>
	<img src="images/img-aside-contato.png" border="0">
</aside>